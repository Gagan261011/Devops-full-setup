#############################################
# TERRAFORM VARIABLES - EXAMPLE FILE
# Copy this to terraform.tfvars and fill in your values
#############################################

# AWS Region
aws_region = "us-east-1"

# Your AWS SSH Key Pair name (must exist in AWS)
key_name = "your-key-pair-name"

# Your IP address for SSH access (use /32 for single IP)
# Find your IP: curl https://checkip.amazonaws.com
allowed_ssh_cidr = "YOUR_IP_ADDRESS/32"

# Optional: Change project name
# project_name = "devops-lab"

# Optional: Change instance type
# instance_type = "t3.medium"

# Optional: Change VPC CIDR
# vpc_cidr = "10.0.0.0/16"
